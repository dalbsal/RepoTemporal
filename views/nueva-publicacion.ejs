<%-include('partials/header')  %>
<%-include('partials/navbar')  %>


    <div class="container mt-5 p-2 g-col-6">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form action="#" id="form-guardar">
                    <div class="mb-3">
                        <input type="text" id="titulo" class="form-control" placeholder="Título del Post">
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-floating">
                            <textarea id="detalle" class="form-control" placeholder="Ingrese detalle" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Descripción</label>
                          </div>
                    </div>

                    <div class="mb-3">
                        <input type="date" class="form-control" name="" id="fecha_publicacion">
                    </div>

                    <div class="mb-3">
                        <input type="text" id="url_imagen" class="form-control" placeholder="Url imagen">
                    </div>

                    <div class="mb-3">
                        <input type="text" id="nombre_autor" class="form-control" placeholder="Nombre del Autor">
                    </div>

                    <button type="submit" id="btn-guardar" class="btn btn-primary">
                        Guardar
                    </button>
                    <a href="/admin/publicaciones" class="btn btn-danger" id="btn-cancelar">
                        Cancelar
                    </a>

                  </form>
            </div>
        </div>
    </div>


    <script src="/js/nueva-publicacion.js"></script>

<%-include('partials/footer')  %>